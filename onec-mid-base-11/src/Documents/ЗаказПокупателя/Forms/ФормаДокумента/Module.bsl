&НаКлиенте
Процедура РассчитатьСуммуСтроки(ТекущиеДанные)
	
	// ++ Исполнитель Майер ЕВ Заявка _______ от 10.04.2025г.
	//ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;
	//Изменен расчет скидки
	КоэффициентСкидки = 1 - ТекущиеДанные.Скидка / 100;
	ИтогСкидки = КоэффициентСкидки - Объект.ДОП_СогласованнаяСкидка/100;

	
	Если ИтогСкидки < 0 Тогда
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = "Итоговая скидка превышает допустимое значение";
		Сообщение.Сообщить();
		ИтогСкидки = 0;
		 
	КонецЕсли;
	
	ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * ИтогСкидки;
	
	//ТекущиеДанные.Сумма = ТекущиеДанные.Количество * (ТекущиеДанные.Цена - ТекущиеДанные.Цена * Объект.ДОП_СогласованнаяСкидка/100);
	
	 
	 РассчитатьСуммуДокумента();
	
КонецПроцедуры

&НаКлиенте
Процедура РассчитатьСуммуДокумента()
	
	Объект.СуммаДокумента = Объект.Товары.Итог("Сумма") + Объект.Услуги.Итог("Сумма");
	
КонецПроцедуры

&НаКлиенте
Асинх Процедура  ЗадатьВопросПользователю()
	
	//Проверяем заполнены ли таблицы
	Если ЗначениеЗаполнено(Объект.Товары) = Ложь И ЗначениеЗаполнено(Объект.Услуги) = Ложь Тогда
		Возврат;
	Иначе
		Режим = РежимДиалогаВопрос.ДаНет;
		Ответ = Ждать ВопросАсинх(НСтр("ru = 'Изменено значение скидки. Пересчитать сумму в документе?'"), Режим, 0);
		
		Если Ответ = КодВозвратаДиалога.Да Тогда
			ПересчитатьТаблицу(Объект.Товары);
			ПересчитатьТаблицу(Объект.Услуги);
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

